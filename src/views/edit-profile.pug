extends base

block content
    img(src=`${loggedInUser.socialOnly ? loggedInUser.avatarUrl : `/${loggedInUser.avatarUrl}`}`, alt="" width="100", height="100")
    if errorMessage 
        span=errorMessage
    form(action="", method="POST", enctype="multipart/form-data")
        label(for="avatar") Label
        input(name="avatar", type="file", accepts ="images/*", id="avatar")
        input(name="email", type="text", placeholder="Email", value=loggedInUser.email)
        input(name="userName", type="text", placeholder="User Name", value=loggedInUser.userName)
        input(name="name", type="text", placeholder="Name", value=loggedInUser.name)
        input(name="location", type="text", placeholder="Location", value=loggedInUser.location)
        input(type="submit", value="Save")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") Change Password &rarr;
