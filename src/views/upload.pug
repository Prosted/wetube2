extends base

block content
    if errorMessage 
        span=errorMessage
    form(action="", method="POST")
        input(name="title" type="text", placeholder="Title", required minlength="5", maxlength="20")
        input(name="description" type="text", placeholder="Description", required minlength="5", maxlength="20")
        input(name="hashtags" type="text", placeholder="Hashtags, separated by comma", required)
        input(type="submit", value="Save")