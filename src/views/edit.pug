extends base

block content 
    form(action="", method="POST")
        input(name="title", placeholder="Video Title", value=`${video.title}`, required, type="text")
        input(name="description" type="text", value=`${video.description}`, placeholder="Description", required)
        input(name="hashtags" type="text", value=`${video.hashtags}`, placeholder="Hashtags, separated by comma", required)
        input(type="submit", value="Save")